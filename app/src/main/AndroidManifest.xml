<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="site.lool.android.competition">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读写 SD 卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 主页 -->
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".activity.ViewpagerActivity" />
        <activity android:name=".activity.level2.CaseHistoryActivity" />
        <activity android:name=".activity.level2.WebViewActivity" />
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.level2.SpecialOffersActivity" />
        <activity android:name=".activity.level3.ImageUploadActivity" />
        <activity android:name=".activity.TestActivity" />
        <activity
            android:name=".activity.level3.ImageActivity"
            android:label="@string/title_activity_image"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".activity.level2.StepCountingActivity"></activity>
    </application>

</manifest>